{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,

    "outDir": "dist",

    
    "strict": true,
    "baseUrl": ".",
    

    "paths": {
      "*": [
          "node_modules/*"
      ]
  },
  
  "experimentalDecorators": true,
  },
  "include": [
    "src/**/*"   
  ]
}
